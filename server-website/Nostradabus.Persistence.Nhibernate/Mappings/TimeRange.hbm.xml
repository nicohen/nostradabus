<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Nostradabus.BusinessEntities" namespace="Nostradabus.BusinessEntities">
	<class name="TimeRange" table="time_range">
		<id name="ID" type="System.Int32" column="id" unsaved-value="0">
			<generator class="identity"/>
		</id>
		<property name="Name" column="name" type="System.String" not-null="true"/>
		<property name="Description" column="description" type="System.String" not-null="false" />
		
		<!--
		<property name="Start" column="start_time" type="TimeAsTimeSpan" not-null="true" />
		<property name="End" column="end_time" type="TimeAsTimeSpan" not-null="true"/>
		-->
	</class>
</hibernate-mapping>
